
<p style="color: green"><%= notice %></p>

<h2>Person</h2>
<table id="person_table" class="table table-bordered table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th style="text-align: center; vertical-align: middle;">Email</th>
      <th style="text-align: center; vertical-align: middle;">User</th>
      <th style="text-align: center; vertical-align: middle;">Premium</th>
      <th style="text-align: center; vertical-align: middle;">Admin</th>
      <th style="text-align: center; vertical-align: middle;">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td style="text-align: center; vertical-align: middle;"><%= user.email %></td>
        <td style="text-align: center; vertical-align: middle;"><%= user.user %></td>
        <td style="text-align: center; vertical-align: middle;"><%= user.premium %></td>
        <td style="text-align: center; vertical-align: middle;"><%= user.admin %></td>
        <td style="text-align: center; vertical-align: middle;">
          <div class="btn-group" role="group" aria-label="Basic outlined example">
            <%= link_to 'Detail', detail_member_path(user), class:'btn btn-info' %>
            <%= link_to 'Edit', edit_member_path(user), class:'btn btn-warning' %>
            <%= link_to 'Destroy', destroy_member_path(user), method: :get, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger'%>
          </div>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>

<br>

<%= link_to 'New Person', create_member_path, class:"btn btn-primary" %>



